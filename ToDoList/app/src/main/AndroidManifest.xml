<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.xzhang1234.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.xzhang1234.todolist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.xzhang1234.todolist.AddEditActivity"
            android:label="@string/title_activity_add_edit"
            android:parentActivityName="io.github.xzhang1234.todolist.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.xzhang1234.todolist.io.github.xzhang1234.todolist.MainActivity" />
        </activity>

        <provider
            android:name="io.github.xzhang1234.todolist.AppProvider"
            android:authorities="io.github.xzhang1234.todolist.provider"
            android:exported="false" />

        <activity
            android:name="io.github.xzhang1234.todolist.ListFinishedActivity"
            android:label="@string/title_activity_list_finished"
            android:parentActivityName="io.github.xzhang1234.todolist.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.xzhang1234.todolist.io.github.xzhang1234.todolist.MainActivity" />
        </activity>
    </application>

</manifest>