<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <TextView
        android:id="@+id/tli_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Task"
        app:layout_constraintRight_toLeftOf="@+id/tli_priority"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tli_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tli_name"
        tools:text="Write courses notes and video for the TaskTimer Application."
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tli_name" />

    <ImageButton
        android:id="@+id/tli_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/edit_button_description"
        app:layout_constraintTop_toTopOf="@+id/tli_delete"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintRight_toLeftOf="@+id/tli_delete"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tli_delete"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/tli_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/delete_button_description"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:layout_constraintTop_toTopOf="@+id/tli_finished"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tli_finished"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/tli_finished"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tli_priority"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/tli_edit"
        app:layout_constraintRight_toLeftOf="@+id/tli_edit"
        app:layout_constraintTop_toTopOf="@+id/tli_edit"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Priority" />

    <ImageButton
        android:id="@+id/tli_finished"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/checkbox_on_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


</android.support.constraint.ConstraintLayout>